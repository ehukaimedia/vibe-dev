{
  "name": "vibe-dev-mvp",
  "version": "0.3.0",
  "description": "Vibe Dev MVP - Two tools, infinite capability. Clean slate implementation.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "vibe-dev": "./dist/index.js"
  },
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc -p tsconfig.build.json",
    "build:dev": "tsc",
    "postbuild": "node scripts/post-build.js",
    "dev": "tsc --watch",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:ci": "cross-env CI=true NODE_OPTIONS='--experimental-vm-modules' jest --forceExit --detectOpenHandles",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "clean": "rm -rf dist coverage",
    "start": "node dist/index.js",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:validate": "node scripts/test/validate-organization.js",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit && node scripts/lint.js",
    "prepare": "npm run build"
  },
  "keywords": [
    "vibe-dev",
    "mcp",
    "terminal",
    "developer-tools",
    "intelligent-cli"
  ],
  "author": "ehukaimedia",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ehukaimedia/vibe-dev-mvp.git"
  },
  "bugs": {
    "url": "https://github.com/ehukaimedia/vibe-dev-mvp/issues"
  },
  "homepage": "https://github.com/ehukaimedia/vibe-dev-mvp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.2",
    "@types/node": "^24.0.4",
    "typescript": "^5.8.3",
    "zod": "^3.25.67",
    "zod-to-json-schema": "^3.24.6"
  },
  "optionalDependencies": {
    "node-pty": "^1.0.0"
  },
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.3",
    "@types/jest": "^30.0.0",
    "cross-env": "^7.0.3",
    "jest": "^30.0.3",
    "jest-mock-extended": "^4.0.0",
    "ts-jest": "^29.4.0",
    "tsx": "^4.20.3"
  }
}
