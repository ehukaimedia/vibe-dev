{
  "name": "vibe-dev-mvp",
  "version": "0.3.0",
  "description": "Vibe Dev MVP - Two tools, infinite capability. Clean slate implementation.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "vibe-dev": "./dist/index.js"
  },
  "scripts": {
    "build": "node scripts/build.js --no-verify",
    "build:clean": "node scripts/build.js --clean",
    "build:full": "node scripts/build.js --clean",
    "build:quick": "tsc --incremental",
    "dev": "tsc --watch --incremental",
    "clean": "node scripts/clean.js",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build",
    "verify": "node scripts/verify-build.js",
    "test": "node test/integration/mac/production.test.mjs",
    "test:unit": "echo 'Unit tests ready for implementation'",
    "test:integration": "node test/integration/mac/production.test.mjs",
    "test:mac": "node test/integration/mac/production.test.mjs",
    "test:windows": "node test/integration/windows/windows.test.mjs",
    "test:cross": "node test/integration/cross-platform/gemini-test.mjs",
    "test:gemini": "node test/integration/cross-platform/gemini-test.mjs",
    "test:production": "node test/integration/mac/production.test.mjs",
    "test:build": "npm run build && echo 'Build test passed'"
  },
  "keywords": [
    "vibe-dev",
    "mcp",
    "terminal",
    "developer-tools",
    "intelligent-cli"
  ],
  "author": "ehukaimedia",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ehukaimedia/vibe-dev-mvp.git"
  },
  "bugs": {
    "url": "https://github.com/ehukaimedia/vibe-dev-mvp/issues"
  },
  "homepage": "https://github.com/ehukaimedia/vibe-dev-mvp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.2",
    "@types/node": "^24.0.4",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3",
    "zod": "^3.25.67",
    "zod-to-json-schema": "^3.24.6"
  },
  "optionalDependencies": {
    "node-pty": "^1.0.0"
  },
  "directories": {
    "doc": "docs"
  },
  "devDependencies": {
    "tsx": "^4.20.3"
  }
}
